        <Button x:Name="buttonForAddKey" Content="Добавить ключ для расшифрования (.bin)"  HorizontalAlignment="Left" Margin="43.8,420,0,0" VerticalAlignment="Top" Width="240" Height="40" Click="button1_Click" UseLayoutRounding="False"/>
        <Button x:Name="buttonClearTextboxKey" Content="Очистить" HorizontalAlignment="Left" Margin="125,468,0,0" Width="80" Height="35" Click="buttonClearTextboxKey_Click" VerticalAlignment="Top"/>
    </Grid>
</Window>
